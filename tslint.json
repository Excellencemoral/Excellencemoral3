{
  "extends": [
    "tslint:recommended",
    "gts/tslint.json"
  ],
  "rules": {
    "ban-ts-ignore": true,
    "no-default-export": false,
    "quotemark": [true, "single"],
    "eofline": true
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.{j,t}s",
      "**/node_modules/**/*.{j,t}s"
    ]
  }
}
