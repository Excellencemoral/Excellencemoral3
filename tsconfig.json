{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "paths": {
        "@material/base": "./packages/mdc-base",
        "@material/ripple": "./packages/mdc-ripple",
        "@material/tab-indicator": "./packages/mdc-tab-indicator",
        "@material/tab-scroller": "./packages/mdc-tab-scroller"
    },
    "downlevelIteration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noErrorTruncation": true,
    "noEmitOnError": false,
    "importHelpers": true,
    "noStrictGenericChecks": true,
    "strict": true,
    "pretty": true,
    "preserveConstEnums": true,
    "stripInternal": true,
    "sourceMap": true,
    "target": "es5",
    "newLine": "lf",
    "types": [],
    "declaration": true
  }
}
